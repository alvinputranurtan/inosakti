RewriteEngine On

<Files ".env">
    Require all denied
</Files>

# Ensure uploaded videos are served inline as playable media, not forced downloads.
AddType video/mp4 .mp4
AddType video/webm .webm
AddType video/ogg .ogg

# Universal rules for localhost subfolder and production root.
# Avoid RewriteBase so this file works in both environments.

# PWA manifest route (works with extensionless URL)
RewriteRule ^site\.webmanifest$ site.webmanifest.php [L,QSA]

# =========================
# SHOP CATEGORY ROUTE
# =========================
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^pages/products/shop/?$ pages/products/shop.php [QSA,L]
RewriteRule ^pages/products/shop/category/([^/]+)/?$ pages/products/shop.php?category=$1 [QSA,L]

# =========================
# HILANGKAN .PHP (internal rewrite)
# =========================
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^([^.]+)$ $1.php [L]

# Redirect .php ke URL tanpa ekstensi
RewriteCond %{REQUEST_URI} !/site\.webmanifest\.php$ [NC]
RewriteCond %{THE_REQUEST} \s/+(.+?)\.php(?:[\s?]|$)
RewriteRule ^ /%1 [R=301,L]
