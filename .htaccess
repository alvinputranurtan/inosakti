RewriteEngine On
RewriteBase /inosakti.com/

# =========================
# DEBUG - Remove comment to see what's happening
# =========================
# RewriteLogLevel 5
# RewriteLog "C:/xampp/apache/logs/rewrite.log"

# =========================
# SHOP CATEGORY ROUTE - Handle URL parameters
# =========================
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^pages/products/shop/?$ pages/products/shop.php [QSA,L]
RewriteRule ^pages/products/shop/category/([^/]+)/?$ pages/products/shop.php?category=$1 [QSA,L]

# =========================
# HILANGKAN .PHP
# =========================
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^([^\.]+)$ $1.php [L]

# Redirect .php to non-.php
RewriteCond %{THE_REQUEST} \s/+(.+?)\.php[\s?]
RewriteRule ^ /%1 [R=301,L]